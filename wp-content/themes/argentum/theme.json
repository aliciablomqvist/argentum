{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1400px",
      "wideSize": "100%"
   },
    "useRootPaddingAwareAlignments": true,
    "spacing": {
      "padding": false,
      "margin": false
    },
    
    "color": {
      "palette": [
        {
          "slug": "base",
          "color": "#FAFAFA",
          "name": "Base"
        },
        {
          "slug": "silver",
          "color": "#C0C0C0",
          "name": "Silver"
        },
        {
          "slug": "charcoal",
          "color": "#2C2C2C",
          "name": "Charcoal"
        },
        {
          "slug": "gold",
          "color": "#D4AF37",
          "name": "Gold"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        },
        {
          "slug": "off-white",
          "color": "#F5F5F5",
          "name": "Off White"
        },
        {
          "slug": "dark-silver",
          "color": "#A8A8A8",
          "name": "Dark Silver"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Cormorant Garamond', serif",
          "slug": "cormorant",
          "name": "Cormorant Garamond"
        },
        {
          "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "2.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "4rem",
          "name": "XX Large"
        }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--charcoal)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--cormorant)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "300",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--cormorant)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "300",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--cormorant)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--charcoal)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--silver)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--charcoal)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "letterSpacing": "0.05em"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--silver)",
            "text": "var(--wp--preset--color--charcoal)"
          }
        }
      }
    }
  }
}
